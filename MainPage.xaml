<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:Examen_Mvvm.ViewModels"
    x:Class="Examen_Mvvm.MainPage"
    x:DataType="viewmodels:MainViewModel"
    Title="Cálculo de Descuento">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="14">

            <!-- Entradas (teclado numérico) -->
            <Label Text="Producto 1" />
            <Entry Keyboard="Numeric"
                   Placeholder="0.00"
                   Text="{Binding Product1}" />

            <Label Text="Producto 2" />
            <Entry Keyboard="Numeric"
                   Placeholder="0.00"
                   Text="{Binding Product2}" />

            <Label Text="Producto 3" />
            <Entry Keyboard="Numeric"
                   Placeholder="0.00"
                   Text="{Binding Product3}" />

            <!-- Resultados (solo lectura con Label) -->
            <Label Text="Subtotal" FontAttributes="Bold" />
            <Label Text="{Binding Subtotal, StringFormat='L{0:N2}'}" />

            <Label Text="Descuento aplicado" FontAttributes="Bold" />
            <Label Text="{Binding Descuento, StringFormat='{0}%'}" />

            <Label Text="Total a pagar" FontAttributes="Bold" />
            <Label Text="{Binding Total, StringFormat='L{0:N2}'}" />

            <!-- Botones -->
            <Button Text="Calcular"
                    Command="{Binding CalcularCommand}" />

            <Button Text="Limpiar"
                    Command="{Binding LimpiarCommand}"
                    BackgroundColor="#EEEEEE" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
