<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- ===== Paleta de Colores (Color) ===== -->
    <Color x:Key="Primary">#6750A4</Color>
    <Color x:Key="OnPrimary">#FFFFFF</Color>

    <Color x:Key="Secondary">#625B71</Color>
    <Color x:Key="OnSecondary">#FFFFFF</Color>

    <Color x:Key="Surface">#FFFBFE</Color>
    <Color x:Key="OnSurface">#1C1B1F</Color>

    <Color x:Key="SurfaceVariant">#E7E0EC</Color>
    <Color x:Key="OnSurfaceVariant">#49454F</Color>

    <Color x:Key="Outline">#79747E</Color>
    <Color x:Key="CardBackground">#FFFFFF</Color>
    <Color x:Key="CardStroke">#E6E1E5</Color>
    <Color x:Key="ShadowColor">#1F000000</Color>

    <!-- ===== Brushes derivados (para props de tipo Brush) ===== -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}" />
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackground}" />
    <SolidColorBrush x:Key="CardStrokeBrush" Color="{StaticResource CardStroke}" />
    <SolidColorBrush x:Key="ShadowBrush" Color="{StaticResource ShadowColor}" />

    <!-- Fondo con gradiente (Brush) -->
    <LinearGradientBrush x:Key="AppBackgroundBrush">
        <GradientStop Color="#F8F5FF" Offset="0" />
        <GradientStop Color="#F3F0FA" Offset="1" />
    </LinearGradientBrush>

</ResourceDictionary>
